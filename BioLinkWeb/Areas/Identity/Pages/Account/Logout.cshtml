@page
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4 text-center" style="width: 400px; border-radius: 15px;">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <div class="mb-3">
                <h2 class="fw-bold text-primary">Ingin Keluar?</h2>
                <p class="text-muted">Klik di bawah untuk keluar dengan aman.</p>
            </div>

            <form asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                  method="post">
                <button type="submit" class="btn btn-danger w-100 rounded-pill btn-lg shadow-sm">
                    Keluar
                </button>
            </form>
        }
        else
        {
            <div class="mb-3">
                <h2 class="fw-bold text-success">✅ Keluar</h2>
                <p class="text-muted">Anda telah berhasil keluar dari aplikasi.</p>
            </div>

            <a href="~/Identity/Account/Login" class="btn btn-primary w-100 rounded-pill btn-lg shadow-sm">
                Masuk kembali
            </a>
        }
    </div>
</div>
