@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<style>
    body {
        background: linear-gradient(135deg, #667eea, #764ba2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    .auth-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .auth-card {
        background: #fff;
        border-radius: 15px;
        padding: 40px 35px;
        width: 420px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        color: #333;
    }

    .auth-card h3 {
        font-weight: 700;
        margin-bottom: 25px;
        text-align: center;
        color: #333;
    }

    .form-label {
        font-size: 14px;
        margin-bottom: 6px;
        font-weight: 600;
        color: #333;
    }

    .form-control, textarea {
        background: #f9f9f9;
        border: 1px solid #ddd;
        color: #333;
        border-radius: 10px;
        padding: 12px 15px;
        font-size: 15px;
        width: 100%;
    }

    .form-control:focus, textarea:focus {
        border-color: #667eea;
        outline: none;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.3);
    }

    .mb-3 {
        margin-bottom: 18px !important;
    }

    .btn-custom {
        background: linear-gradient(90deg, #667eea, #764ba2);
        border: none;
        color: #fff;
        font-weight: 600;
        font-size: 16px;
        padding: 12px;
        border-radius: 10px;
        width: 100%;
        transition: 0.3s;
    }

    .btn-custom:hover {
        opacity: 0.95;
        transform: translateY(-2px);
    }

    .form-check-label {
        margin-left: 6px;
        color: #333;
    }

    .text-link {
        color: #667eea;
        font-weight: 600;
        text-decoration: none;
    }

    .text-link:hover {
        text-decoration: underline;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <h3>✨ Buat Akun Baru</h3>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <!-- Username -->
            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" placeholder="Pilih username unik" />
                <span asp-validation-for="Input.UserName" class="text-danger small"></span>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="contoh@email.com" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Ulangi password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <!-- Display Name -->
            <div class="mb-3">
                <label asp-for="Input.DisplayName" class="form-label"></label>
                <input asp-for="Input.DisplayName" class="form-control" placeholder="Nama yang ingin ditampilkan" />
                <span asp-validation-for="Input.DisplayName" class="text-danger small"></span>
            </div>

            <!-- Bio -->
            <div class="mb-3">
                <label asp-for="Input.Bio" class="form-label"></label>
                <textarea asp-for="Input.Bio" class="form-control" rows="3" placeholder="Ceritakan sedikit tentang dirimu..."></textarea>
                <span asp-validation-for="Input.Bio" class="text-danger small"></span>
            </div>

            <!-- Public / Private -->
            <div class="form-check mb-3">
                <input asp-for="Input.IsPublic" class="form-check-input" />
                <label asp-for="Input.IsPublic" class="form-check-label">Profil Publik</label>
            </div>

            <button type="submit" class="btn btn-custom">Daftar</button>
        </form>

        <div class="text-center mt-3">
            <small>Sudah punya akun? <a asp-page="./Login" class="text-link">Login</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
