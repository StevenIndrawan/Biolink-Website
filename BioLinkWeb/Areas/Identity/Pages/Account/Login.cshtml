@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Selamat Datang</h2>
            <p class="text-muted">Silakan masuk untuk melanjutkan</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>
                <a id="forgot-password" asp-page="./ForgotPassword" class="small text-decoration-none">Lupa Password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100 rounded-pill btn-lg shadow-sm">Masuk</button>

            <div class="text-center mt-3">
                <span class="text-muted">Tidak punya akun?</span>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none"> Daftar</a>
            </div>

            <div class="text-center mt-2">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="small text-decoration-none">Kirim ulang konfirmasi email</a>
            </div>
        </form>

        <hr class="my-4" />
        <div class="text-center">
            <p class="text-muted">Atau lanjutkan dengan</p>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="small text-muted">
                        Tidak ada login eksternal yang dikonfigurasi. <a href="https://go.microsoft.com/fwlink/?LinkID=532715">Pelajari lebih lanjut</a>
                    </p>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div class="d-flex justify-content-center gap-2">
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary rounded-pill px-3" 
                                        name="provider" value="@provider.Name" 
                                        title="Log in using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
