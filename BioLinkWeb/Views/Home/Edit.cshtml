@model BioLinkWeb.Models.ApplicationUser

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-5">
    <h2>Edit Profile</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" asp-for="DisplayName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Bio</label>
            <textarea asp-for="Bio" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Background</label>
            <input type="text" asp-for="Background" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Profile Image</label>
            <input type="file" name="profileImage" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" class="img-thumbnail mt-2" style="max-width: 150px;" />
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Public Profile?</label>
            <select asp-for="IsPublic" class="form-select">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Simpan</button>
    </form>
</div>
