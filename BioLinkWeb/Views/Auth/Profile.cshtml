@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5" style="max-width:600px;">
    <div class="card shadow">
        <div class="card-body text-center">
            <h3>👤 Halo, @ViewBag.Username</h3>
            <p class="text-muted">Selamat datang di halaman profilmu.</p>

            <div class="mt-4">
                <a asp-controller="Biolink" asp-action="Settings" class="btn btn-outline-primary">⚙️ Edit Profile</a>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-success">📊 Dashboard</a>
                <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">🚪 Logout</a>
            </div>
        </div>
    </div>
</div>
