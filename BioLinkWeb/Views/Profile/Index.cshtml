@model BioLinkWeb.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5" style="max-width:600px;">
    <div class="card shadow">
        <div class="card-body text-center">
            <h3>👤 @Model.DisplayName (@Model.UserName)</h3>
            <p class="text-muted">@Model.Email</p>
            <p>@Model.Bio</p>

            <div class="mt-4">
                <a asp-controller="Profile" asp-action="Edit" class="btn btn-outline-primary">✏️ Edit Profile</a>
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-success">📊 Dashboard</a>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="d-inline">
                    <button type="submit" class="btn btn-danger">🚪 Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>
