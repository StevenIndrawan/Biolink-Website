@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Dashboard";
}
<div class="container my-5">
    <!-- Heading -->
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-bar-chart-fill fs-1 text-primary me-3"></i>
        <h1 class="fw-bold mb-0">Dashboard</h1>
    </div>

    <!-- Card Section -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <h5 class="card-title fw-semibold mb-3">Daftar User</h5>
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Display Name</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Bio</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Steven</td>
                            <td>steven123</td>
                            <td>steven@email.com</td>
                            <td>Fullstack dev</td>
                            <td><span class="badge bg-success">Active</span></td>
                        </tr>
                        <tr>
                            <td>Amanda</td>
                            <td>amanda_dev</td>
                            <td>amanda@email.com</td>
                            <td>UI/UX Designer</td>
                            <td><span class="badge bg-secondary">Inactive</span></td>
                        </tr>
                        <!-- loop data user di sini -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 d-flex justify-content-end">
        <a href="/Dashboard/Settings" class="btn btn-outline-secondary me-2">
            <i class="bi bi-gear-fill me-1"></i> Settings
        </a>
        <a href="/Dashboard" class="btn btn-primary">
            <i class="bi bi-speedometer2 me-1"></i> Masuk ke Dashboard
        </a>
    </div>
</div>
