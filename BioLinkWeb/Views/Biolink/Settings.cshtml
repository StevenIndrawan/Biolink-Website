@model BioLinkWeb.Models.ProfileSettingViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Settings - @Model.DisplayName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        body {
            margin: 0;
            padding: 40px;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #6a11cb, #2575fc, #ff6a00, #ee0979);
            background-size: 400% 400%;
            animation: gradientMove 20s ease infinite;
        }
        @@keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .settings-container {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 30px;
            max-width: 650px;
            width: 100%;
            color: white;
            box-shadow: 0 8px 30px rgba(0,0,0,0.25);
            animation: fadeIn 0.8s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        h2 {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 25px;
        }

        .profile-pic {
            text-align: center;
            margin-bottom: 25px;
        }

        .profile-pic img {
            width: 120px; height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid rgba(255,255,255,0.5);
            box-shadow: 0 6px 15px rgba(0,0,0,0.4);
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 6px;
            display: block;
            color: #eee;
        }

        input, textarea {
            width: 100%;
            padding: 12px 15px;
            border-radius: 12px;
            border: none;
            outline: none;
            font-size: 14px;
            background: rgba(255,255,255,0.15);
            color: white;
            transition: 0.25s;
        }
        input:focus, textarea:focus {
            background: rgba(255,255,255,0.25);
            box-shadow: 0 0 0 2px rgba(255,255,255,0.4);
        }

        textarea { resize: none; }

        .radio-group {
            display: flex;
            gap: 20px;
            align-items: center;
            margin-top: 6px;
        }

        .radio-group label {
            font-weight: normal;
            font-size: 14px;
            cursor: pointer;
        }

        .btn {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 12px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 10px;
            transition: all 0.3s ease;
        }

        .btn-save {
            background: linear-gradient(90deg, #4cafef, #2196f3);
            color: white;
            box-shadow: 0 4px 14px rgba(0,0,0,0.3);
        }
        .btn-save:hover { transform: translateY(-2px); }

        .btn-delete {
            background: #e74c3c;
            color: white;
        }
        .btn-delete:hover { background: #c0392b; }

        .accordion {
            margin-top: 20px;
        }
        .accordion-header {
            padding: 12px;
            border-radius: 10px;
            background: rgba(255,255,255,0.15);
            display: flex;
            justify-content: space-between;
            cursor: pointer;
            margin-bottom: 6px;
            transition: 0.3s;
        }
        .accordion-header:hover {
            background: rgba(255,255,255,0.25);
        }
        .accordion-content {
            max-height: 0;
            overflow: hidden;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.08);
            border-radius: 10px;
            padding: 0 12px;
        }
        .accordion-content.active {
            max-height: 500px;
            padding: 12px;
            margin-bottom: 10px;
        }

        .back-btn {
            display:block;
            text-align:center;
            margin-top:20px;
            color:#ddd;
            font-size:14px;
            text-decoration:none;
        }
        .back-btn:hover { text-decoration: underline; }
    </style>
</head>
<body>
    <div class="settings-container">
        <div class="profile-pic">
            <img id="profilePreview" src="@Model.ProfileImageUrl" alt="@Model.DisplayName" />
        </div>

        <h2>‚öôÔ∏è Edit Profile</h2>

        <!-- FORM UPDATE PROFILE -->
        <form asp-action="Settings" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Foto Profil</label>
                <input type="file" name="profileImage" class="form-control" accept="image/*" onchange="previewImage(event)" />
                <small style="color:#ccc; font-size:12px;">Pilih foto baru untuk mengganti.</small>
            </div>

            <div class="form-group">
                <label>Username</label>
                <input asp-for="Username" readonly />
            </div>

            <div class="form-group">
                <label>Display Name</label>
                <input asp-for="DisplayName" />
            </div>

            <div class="form-group">
                <label>Bio</label>
                <textarea asp-for="Bio" rows="2"></textarea>
            </div>

            <div class="form-group">
                <label>Background (CSS Gradient)</label>
                <input asp-for="Background" />
            </div>

            <div class="form-group">
                <label>Profil Visibility</label>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="IsPublic" value="true" @(Model.IsPublic ? "checked" : "") /> Public
                    </label>
                    <label>
                        <input type="radio" name="IsPublic" value="false" @(!Model.IsPublic ? "checked" : "") /> Private
                    </label>
                </div>
                <small style="color:#ccc; font-size:12px;">
                    Jika <b>Private</b>, orang lain akan melihat <b>404</b> ketika mengakses profil Anda.
                </small>
            </div>

            <button type="submit" class="btn btn-save">üíæ Simpan Perubahan</button>
        </form>

        <!-- LINKS SECTION -->
        <h3 style="margin-top:25px;">üîó Links</h3>
        <div id="links-container">
            @for (int i = 0; i < Model.Links.Count; i++)
            {
                <div class="accordion">
                    <div class="accordion-header" onclick="toggleAccordion(@i)">
                        <span>@Model.Links[i].Title</span>
                        <i class="bi bi-chevron-down"></i>
                    </div>
                    <div id="accordion-@i" class="accordion-content">
                        <form asp-action="DeleteLink" method="post" style="text-align:right;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Links[i].Id" />
                            <button type="submit" class="btn btn-delete">üóë Hapus</button>
                        </form>

                        <div class="form-group">
                            <label>Title</label>
                            <input value="@Model.Links[i].Title" readonly />
                        </div>
                        <div class="form-group">
                            <label>URL</label>
                            <input value="@Model.Links[i].Url" readonly />
                        </div>
                        <div class="form-group">
                            <label>Icon</label>
                            <input value="@Model.Links[i].Icon" readonly />
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ADD NEW LINK -->
        <h3 style="margin-top:25px;">‚ûï Tambah Link Baru</h3>
        <form asp-action="AddLink" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Title</label>
                <input name="Title" required />
            </div>
            <div class="form-group">
                <label>URL</label>
                <input name="Url" required />
            </div>
            <div class="form-group">
                <label>Icon</label>
                <input name="Icon" placeholder="contoh: bi bi-instagram" />
            </div>
            <button type="submit" class="btn btn-save">Tambah Link</button>
        </form>

        <a asp-controller="Biolink" asp-action="Index" asp-route-username="@Model.Username" class="back-btn">
            ‚¨ÖÔ∏è Kembali ke Profile
        </a>
    </div>

    <script>
        function toggleAccordion(index) {
            const content = document.getElementById("accordion-" + index);
            content.classList.toggle("active");
        }

        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('profilePreview');
                output.src = reader.result;
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
</body>
</html>
