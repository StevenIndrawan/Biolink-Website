@model IEnumerable<BioLinkWeb.Models.UserViewModel>

@{
    Layout = null; 
    ViewData["Title"] = "Cari User";
    var currentUser = User.Identity?.Name;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            background: linear-gradient(270deg,#6a11cb,#2575fc,#ff6a00,#ee0979);
            background-size: 800% 800%;
            animation: gradientMove 20s ease infinite;
        }

        @@keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .search-box {
            border: none;
            outline: none;
            box-shadow: none;
            font-size: 1.1rem;
            text-align: center;
            background: transparent;
            color: white;
        }
        .search-box::placeholder {
            color: rgba(255,255,255,0.7);
        }

        .user-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            max-width: 320px;
            margin: auto;
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(8px);
            color: white;
        }
        .user-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 28px rgba(0,0,0,0.25);
        }
        .user-img {
            width: 95px; 
            height: 95px; 
            object-fit: cover;
            border: 3px solid rgba(255,255,255,0.5);
        }
        .no-result-card {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(8px);
            border-radius: 12px;
            max-width: 360px;
            margin: auto;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Tombol kembali -->
                <div class="mb-4 text-center">
                    <a href="/@currentUser" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left"></i> Kembali ke Profil Saya
                    </a>
                </div>

                <!-- Header -->
                <div class="text-center mb-4 text-white">
                    <h2 class="fw-bold"><i class="bi bi-search"></i> Cari User</h2>
                    <p class="text-light">Temukan profil biolink pengguna lain dengan cepat</p>
                </div>

                <!-- Search Box -->
                <div class="card shadow-sm mb-4 border-0 rounded-3" style="background:rgba(255,255,255,0.15);backdrop-filter:blur(6px);">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <i class="bi bi-search fs-4 me-2 text-light"></i>
                        <input type="text" id="searchInput" class="form-control search-box"
                               placeholder="ðŸ” Ketik username atau nama...">
                    </div>
                </div>

                <!-- Hasil Pencarian -->
                <div id="searchResults" class="row justify-content-center g-4">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <div class="col-12 col-md-6 d-flex justify-content-center user-card-wrapper">
                                <div class="card h-100 shadow-sm border-0 rounded-3 user-card text-center p-4">
                                    <img src="@(string.IsNullOrEmpty(user.ProfileImageUrl) ? "/images/profile.png" : user.ProfileImageUrl)"
                                         class="rounded-circle mb-3 user-img" />

                                    <h5 class="fw-semibold mb-1 text-white">@user.DisplayName</h5>
                                    <p class="small mb-3 text-light">@user.UserName</p>

                                    <a href="/@user.UserName" class="btn btn-sm btn-light px-3">
                                        <i class="bi bi-person-lines-fill"></i> Lihat Profil
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="card shadow-sm border-0 text-center p-4 no-result-card">
                                <i class="bi bi-emoji-frown fs-1 text-light"></i>
                                <p class="mt-3 mb-0 text-light">Tidak ada user ditemukan</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Script Pencarian -->
    <script>
        $("#searchInput").on("input", function () {
            var value = $(this).val().toLowerCase().trim();
            var hasVisible = false;

            $("#searchResults .user-card-wrapper").each(function () {
                var displayName = $(this).find("h5").text().toLowerCase();
                var userName = $(this).find("p").text().toLowerCase();

                var match = displayName.includes(value) || userName.includes(value);

                if (match) {
                    $(this).show();
                    hasVisible = true;
                } else {
                    $(this).hide();
                }
            });

            if (!hasVisible) {
                if ($("#noResult").length === 0) {
                    $("#searchResults").append(`
                        <div id="noResult" class="col-12">
                            <div class="card shadow-sm border-0 text-center p-4 no-result-card fade-in">
                                <i class="bi bi-search-x fs-1 text-light"></i>
                                <p class="mt-3 mb-0 text-light">Oops, user tidak ditemukan</p>
                            </div>
                        </div>
                    `);
                }
            } else {
                $("#noResult").remove();
            }
        });
    </script>
</body>
</html>
