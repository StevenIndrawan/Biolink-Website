@model BioLinkWeb.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.DisplayName - BioLink</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(270deg, #6a11cb, #2575fc, #ff6a00, #ee0979);
            background-size: 800% 800%;
            animation: gradientMove 20s ease infinite;
        }

        @@keyframes gradientMove {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .profile-card {
            background: rgba(255,255,255,0.08);
            border-radius: 20px;
            padding: 25px;
            max-width: 420px;
            width: 100%;
            text-align: center;
            backdrop-filter: blur(12px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .profile-card img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-bottom: 15px;
            object-fit: cover;
            border: 3px solid rgba(255,255,255,0.5);
        }

        .profile-card h2 {
            margin: 0;
            font-size: 22px;
            font-weight: bold;
            color: white;
        }

        .profile-card p {
            color: #e0e0e0;
            margin: 8px 0 15px;
            font-size: 14px;
        }

        .links {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            gap: 12px;
            align-items: center;
        }

        .links a {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            width: 85%;
            max-width: 380px;
            padding: 12px 16px;
            background: rgba(255,255,255,0.15);
            border-radius: 12px;
            text-decoration: none;
            font-size: 16px;
            font-weight: 500;
            color: white;
            backdrop-filter: blur(6px);
            transition: all 0.25s ease;
        }

        .links a:hover {
            background: rgba(255,255,255,0.35);
            color: #000;
            transform: translateY(-3px);
        }

        .links a span.icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 8px;
            margin-right: 12px;
            font-size: 18px;
        }

        /* Warna default icon bg */
        .links a.website .icon { background: #000; color: #fff; }
        .links a.instagram .icon { background: #E1306C; color: #fff; }
        .links a.twitter .icon { background: #1DA1F2; color: #fff; }
        .links a.linkedin .icon { background: #0077B5; color: #fff; }
        .links a.youtube .icon { background: #FF0000; color: #fff; }
        .links a.github .icon { background: #24292e; color: #fff; }

        .footer {
            font-size: 12px;
            color: #ddd;
            margin-top: 20px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
            transition: 0.3s;
        }

        .btn-primary {
            background: #3498db;
            color: white;
        }

        .btn-primary:hover {
            background: #2980b9;
        }

        .btn-secondary {
            background: #2ecc71;
            color: white;
        }

        .btn-secondary:hover {
            background: #27ae60;
        }
    </style>
</head>
<body>
    <div class="profile-card">
        <img src="@Model.ProfileImageUrl" alt="@Model.DisplayName" />

        <h2>@Model.DisplayName</h2>
        <p>@Model.Bio</p>

        @if (Model.Links != null && Model.Links.Any())
        {
            <div class="links">
                @foreach (var link in Model.Links.OrderBy(l => l.Order))
                {
                    var cssClass = link.Title.ToLower(); // biar bisa pakai class warna
                    <a href="@link.Url" target="_blank" class="@cssClass">
                        <span class="icon">@link.Icon</span>
                        <span>@link.Title</span>
                    </a>
                }
            </div>
        }
        else
        {
            <p>Belum ada link ditambahkan</p>
        }

        <div class="footer">
            BioLink ini Didukung Oleh @Model.DisplayName
        </div>
        <div style="margin-top:20px; text-align:center;">
            <a asp-controller="Biolink" asp-action="Settings" style="
                display:inline-block;
                background:#4cafef;
                color:white;
                padding:10px 20px;
                border-radius:8px;
                text-decoration:none;
                font-weight:bold;">
                ‚öôÔ∏è Settings
            </a>

            <a href="/Dashboard/Index" style="
                display:inline-block;
                background:#3498db;
                color:white;
                padding:10px 20px;
                border-radius:8px;
                text-decoration:none;
                font-weight:bold;
                margin-left:10px;">
                üìä Dashboard
            </a>
        </div>
    </div>
</body>
</html>
