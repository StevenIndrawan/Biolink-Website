@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - BioLinkWeb</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <style>
        .sidebar {
            width: 280px;
            background: #212529;
            color: white;
            position: fixed;
            top: 0;
            right: -280px;
            height: 100%;
            transition: right 0.3s ease-in-out;
            z-index: 1050;
            padding: 20px;
        }
        .sidebar.active {
            right: 0;
        }
        .sidebar .user-info {
            text-align: center;
            margin-bottom: 20px;
        }
        .sidebar .user-info img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 10px;
        }
        .sidebar .nav-link {
            color: #ddd;
        }
        .sidebar .nav-link:hover {
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">🌐 BioLinkWeb</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Menu Kiri -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>

                <!-- Menu Kanan -->
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <button class="btn btn-outline-light" id="toggleSidebar">
                                👤 @User.Identity.Name
                            </button>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sidebar Profile (hanya muncul kalau login) -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="sidebar" id="sidebar">
            <div class="user-info">
                <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=0D8ABC&color=fff" alt="avatar" />
                <h5>@User.Identity.Name</h5>
                <p class="text-muted">Online</p>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" asp-controller="Profile" asp-action="Index">👤 My Profile</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Biolink" asp-action="Settings">⚙️ Settings</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a></li>
                <li class="nav-item">
                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                        <button type="submit" class="btn btn-danger w-100">🚪 Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    }

    <!-- Main Content -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    @if (!(ViewData["Title"]?.ToString() == "Dashboard"))
    {
        <footer class="bg-dark text-white py-3 mt-5">
            <div class="container text-center">
                © 2025 - BioLinkWeb | Dibuat Oleh Steven Indrawan
            </div>
        </footer>
    }

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById("toggleSidebar");

        if (toggleBtn) {
            toggleBtn.addEventListener("click", () => {
                sidebar.classList.toggle("active");
            });
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
